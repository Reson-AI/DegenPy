{
    "id": "combined_task",
    "name": "综合新闻任务",
    "description": "同时支持实时监听新推文和定时生成汇总视频",
    "schedule": "*/30 * * * *",
    "data_source": {
        "type": "redis_subscribe",
        "channel": "special_attention",
        "key": "timeline",
        "tag": 3,
        "batch_size": 10
    },
    "video_config": {
        "style": "news_report",
        "duration": 45,
        "priority": "normal"
    },

    "ai_config": {
        "model": "anthropic/claude-3-opus:beta",
        "system_prompt": "你是一位专业的新闻编辑，擅长将复杂的信息整理成简洁、清晰的新闻报道。"
    },
    "platforms": ["tiktok", "twitter"],
    "webhook": true,
    "priority": 1
}
