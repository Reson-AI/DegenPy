{
    "id": "followed_news",
    "name": "关注人信息热点",
    "description": "每10分钟整理一次关注人发布的信息，生成热点新闻",
    "schedule": "*/10 * * * *",
    "data_source": {
        "type": "recent_uids",
        "source_type": "followed",
        "min_items": 3,
        "fallback": {
            "type": "warehouse",
            "endpoint": "/recent-content",
            "params": {
                "source_type": "followed",
                "limit": 20
            }
        }
    },
    "condition_id": "followed_condition",
    "actions": [
        {
            "type": "ai_process",
            "model": "openrouter",
            "agent": "{{agent_id}}"
        },
        {
            "type": "text2video",
            "config": {
                "style": "news_report",
                "duration": 45
            }
        },
        {
            "type": "publish",
            "platforms": ["tiktok", "twitter"]
        },
        {
            "type": "webhook",
            "url": "{{webhook_url}}"
        }
    ],
    "priority": 2
}
