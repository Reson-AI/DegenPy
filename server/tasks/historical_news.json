{
    "id": "historical_news",
    "name": "历史数据回顾",
    "description": "当新信息较少时，从数据库获取最近50条记录整理成热点新闻",
    "schedule": "15,45 * * * *",
    "data_source": {
        "type": "check_recent_activity",
        "threshold": 10,
        "timeframe_hours": 1,
        "fallback": {
            "type": "warehouse",
            "endpoint": "/recent-content",
            "params": {
                "limit": 50
            }
        }
    },
    "condition_id": "historical_condition",
    "actions": [
        {
            "type": "ai_process",
            "model": "openrouter",
            "agent": "{{agent_id}}"
        },
        {
            "type": "text2video",
            "config": {
                "style": "retrospective",
                "duration": 90
            }
        },
        {
            "type": "publish",
            "platforms": ["tiktok", "twitter"]
        },
        {
            "type": "webhook",
            "url": "{{webhook_url}}"
        }
    ],
    "priority": 0
}
