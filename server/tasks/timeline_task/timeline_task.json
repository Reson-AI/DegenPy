{
    "id": "timeline_task",
    "name": "时间线信息整理",
    "description": "每半小时获取一次普通标签的推文，生成视频内容",
    "type": "timeline",
    "executor": "server.tasks.timeline_task.timeline_task.TimelineTask",
    "schedule": {
        "type": "interval",
        "minutes": 30
    },
    "data_source": {
        "type": "mongodb",
        "time_window": 1800
    },
    "video_config": {
        "style": "news_report",
        "duration": 45,
        "priority": "normal"
    },
    "platforms": ["tiktok", "twitter"],
    "webhook": true,
    "priority": 2,
    "components": [
        "data_fetcher",
        "content_processor",
        "summary_generator",
        "video_generator"
    ],
    "ai_config": {
        "model": "anthropic/claude-3-sonnet:beta",
        "temperature": 0.5,
        "max_tokens": 3000
    }
}
