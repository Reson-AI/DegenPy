{
    "id": "trending_news",
    "name": "Twitter热点信息",
    "description": "每30分钟整理一次Twitter热点信息，生成热点新闻",
    "schedule": "*/30 * * * *",
    "data_source": {
        "type": "recent_uids",
        "source_type": "trending",
        "min_items": 5,
        "fallback": {
            "type": "warehouse",
            "endpoint": "/recent-content",
            "params": {
                "source_type": "trending",
                "limit": 30
            }
        }
    },
    "condition_id": "trending_condition",
    "actions": [
        {
            "type": "ai_process",
            "model": "openrouter",
            "agent": "{{agent_id}}"
        },
        {
            "type": "text2video",
            "config": {
                "style": "trend_analysis",
                "duration": 60
            }
        },
        {
            "type": "publish",
            "platforms": ["tiktok", "twitter"]
        },
        {
            "type": "webhook",
            "url": "{{webhook_url}}"
        }
    ],
    "priority": 1
}
