{
    "id": "rule-1",
    "name": "Hourly Trend Analysis",
    "description": "Analyze recent trends every hour",
    "schedule": "0 * * * *",
    "data_source": {
        "type": "recent_uids",
        "endpoint": "/recent-uids",
        "params": {
            "clear": true
        }
    },
    "conditions": {
        "min_items": 5,
        "fact_check": true,
        "token_limit": 8000,
        "prompt_template": "Review the following information from the most recent posts and identify emerging patterns or trends. Focus on factual information and discard any rumors or unverified claims. Summarize the 3 most significant trends: {{content}}"
    },
    "actions": [
        {
            "type": "ai_process",
            "model": "openrouter",
            "agent": "{{agent_id}}"
        },
        {
            "type": "text2video",
            "config": {
                "style": "trend_analysis",
                "duration": 60
            }
        },
        {
            "type": "publish",
            "platforms": ["tiktok", "twitter"]
        },
        {
            "type": "webhook",
            "url": "{{webhook_url}}"
        }
    ]
}
