{
    "id": "rule-2",
    "name": "Historical Content Review",
    "description": "Review historical content when new content is low",
    "schedule": "30 */4 * * *",
    "data_source": {
        "type": "warehouse",
        "endpoint": "/recent-content",
        "params": {
            "limit": 50
        }
    },
    "conditions": {
        "check_new_content": {
            "threshold": 5,
            "timeframe_hours": 4
        },
        "fact_check": true,
        "token_limit": 10000,
        "prompt_template": "Review this historical content and identify any patterns or insights that are still relevant today. Focus on creating an engaging summary that connects past events to current trends: {{content}}"
    },
    "actions": [
        {
            "type": "ai_process",
            "model": "openrouter",
            "agent": "{{agent_id}}"
        },
        {
            "type": "text2video",
            "config": {
                "style": "retrospective",
                "duration": 90
            }
        },
        {
            "type": "publish",
            "platforms": ["tiktok", "twitter"]
        },
        {
            "type": "webhook",
            "url": "{{webhook_url}}"
        }
    ]
}
